<Page x:Class="InventorySystemClient.Views.InvoiceAddItemView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InventorySystemClient.Views"
      xmlns:uc="clr-namespace:InventorySystemClient.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InvoiceAddItem">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <uc:SearchTextBox Grid.ColumnSpan="2"
                          Margin="5 0"/>
        <ListView Grid.Row="1" Grid.ColumnSpan="3"
                  Margin="10"/>
        <Label Grid.Row="2" Content="Count"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"/>
        <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBoxBaseStyle}"/>
        <Button Grid.Row="2" Grid.Column="2" Content="Add Item"
                Style="{StaticResource BtnStyle}"
                Height="25"
                Margin="10 0"/>
        <Label Grid.Row="3" Content="Goods were added to invoice"
               VerticalAlignment="Bottom"/>
        <ListView Grid.Row="4" Grid.ColumnSpan="3"
                  Margin="10"/>
        <Button Grid.Row="5" Grid.Column="2" Content="Next" 
                Command="{Binding GoToInvoiceCommand}"
                Style="{StaticResource BtnStyle}"
                Height="25"
                Margin="10 0"/>
    </Grid>
</Page>
